{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
  {% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
  {% endif %}
  <div class="container-fluid">
    <div class="col-md-push-3 col-md-6 col-md-push-3 connect">
      <div class="row">
        <h3 class="col-md-12">Connexion</h3>
      </div>

      <div class="col-md-12">
        <div class="col-md-10 col-md-push-1">
          <form action="{{ path('fos_user_security_check') }}" class="fosuser-form" method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
            <div class="row">
              <input class="col-xs-12 fosuser-input" placeholder="Nom d'utilisateur" type="text" id="username" name="_username" value="{{ last_username }}" required="required"/>
              <input class="col-xs-12 fosuser-input" placeholder="Mot de passe" type="password" id="password" name="_password" required="required"/>
            </div>
            <div id="remember">
              <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
              <label class="rememberlab" for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
            </div>
            <div class="row">
              <input class="col-xs-12 col-md-8 col-md-push-2 btn btn-success" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}"/>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

{% endblock fos_user_content %}

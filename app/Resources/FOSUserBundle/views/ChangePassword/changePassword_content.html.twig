{% trans_default_domain 'FOSUserBundle' %}

<div class="container-fluid connect-container">
  <div class="col-md-push-3 col-md-6 col-md-push-3 connect">
    <div class="row">
      <h3 class="col-md-12">Changer de mot de passe</h3>
    </div>

    <div class="col-md-12">
      <div class="col-md-10 col-md-push-1">
        {{ form_start(form, { 'action': path('list_update', {'id': user.id}), 'attr': { 'id':'form-changepassword','class': 'fos_user_registration_register fosuser-form col-md-12' } }) }}
        <div class="row">
          {{ form_widget(form.plainPassword.first,{'attr': {'class': 'col-xs-12 fosuser-input '}}) }}
          {{ form_widget(form.plainPassword.second,{'attr': {'class': 'col-xs-12 fosuser-input '}}) }}
        </div>
        <div class="row">
          <input class="col-xs-12 col-md-8 col-md-push-2 btn btn-success" type="submit" value="{{ 'change_password.submit'|trans }}"/>
        </div>
        <div class="row" style="text-align:center">
          <a class="btn btn-default btn-edit" href="{{ path('list') }}">Retour Ã  la liste des contributeurs</a>
        </div>
        {{ form_end(form) }}
      </div>
    </div>
  </div>
</div>

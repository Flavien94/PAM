{% extends '::base.html.twig' %}
{% block stylesheets %}
  {{ parent() }}
  <link href="{{ asset('css/event/index.css') }}" type="text/css" rel="stylesheet"/>
{% endblock %}
{% block body -%}
  {% for contact in contacts %}
    <div class="container-fluid message-container">
      <div class="row">
        <div class="col-md-12">
          <h1>{{ contact.object }}</h1>
        </div>
      </div>
      <div class="row">
        <hr>
          <div class="row">
            <div class="col-md-12" style="text-align:center">
              <div class="col-md-6">
                <label class="message-lab">Contact :</label>
                {{ contact.firstname }}
                {{ contact.lastname }}
              </div>
              <div class="col-md-6">
                <label class="message-lab">Email du contact :</label>
                {{ contact.email }}
              </div>
            </div>
          </div>
          <div class="row">
            <hr class="visible-xs">
            <div class="col-md-12" style="text-align:center">
              <h3 class="message-title">Message</h3>
              <p> {{ contact.message }}</p>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-push-2 col-xs-10 col-md-push-8 col-md-4">
              <a id="list-message" class="btn btn-default btn-edit" href="{{ path("contact_admin") }}">Retourner Ã  la liste des messages</a>
            </div>
          </div>
      </div>
    </div>
  {% endfor %}
{% endblock %}

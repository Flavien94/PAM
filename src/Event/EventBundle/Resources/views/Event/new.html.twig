{% extends '::base.html.twig' %}
{% block stylesheets %}
  {{ parent() }}
  <link href="{{ asset('css/event/new.css') }}" type="text/css" rel="stylesheet"/>
{% endblock %}
{% block body -%}

  <div class="container event3-container">
    <div class="row">
      <h1>Publier un événement</h1>
    </div>

    {{ form_start(form) }}

    <div class="row contact center">
      <div class="col-md-12">
        <hr>
        <STRONG>Contact de l'évènement :
        </STRONG><a class="hidden-xs hidden-sm picto-item" href="#" aria-label="Personne à contacter en cas de besoin de renseignements supplémentaires"><span class="glyphicon glyphicon-info-sign"></a>
        <br class="visible-xs visible-sm">
        {{ form_widget(form.contact_name, { 'attr': {'class': 'inline contact_name', 'placeholder': 'Nom du contact','tabindex':'1'} })  }}
        {{ form_widget(form.contact_email, { 'attr': {'class': 'inline contact_email', 'placeholder': 'Email du contact','tabindex':'2'} }) }}
        <span class="hidden">
          {{ form_widget(form.author,{ 'attr': {'value': app.user.username, 'readonly':'readonly'}}
          ) }}
        </span>
        <hr>
      </div>
    </div>

    <div class="row date center">
      <strong class="col-xs-12 col-md-2 date">
      <a class="hidden-xs hidden-sm picto-item" href="#" aria-label="Les dates de début et de fin de l'événement sont obligatoires. Les heures ne le sont pas."><span class="glyphicon glyphicon-info-sign"></a>  Date de début* :
      </strong>
      {{ form_widget(form.dateStart,{'attr':{'class': 'col xs-12 col-md-2 center','tabindex':'13'}}) }}
      {{ form_widget(form.timeStart,{'attr':{'class': 'col xs-12 col-md-2 center','tabindex':'14'}}) }}
      <strong class="col-xs-12 col-md-2">
        Date de fin* :
      </strong>
      {{ form_widget(form.dateEnd,{'attr':{'class': 'col xs-12 col-md-2 center','tabindex':'15'}}) }}
      {{ form_widget(form.timeEnd,{'attr':{'class': 'col xs-12 col-md-2 center','tabindex':'16'}}) }}
    </div>

    <div class="row center">
      <div class="col-md-12 selection">
        <div class="row">
          <strong class="hidden-xs hidden-sm strong">Sélectionnez le</strong>
          <strong class="visible-xs visible-sm">Sélectionnez :</strong>
          {{ form_widget(form.sector, { 'attr': {'class': 'btn btn-default center','tabindex':'3'}}) }}
          <strong class="hidden-xs hidden-sm strong">le</strong>
          {{ form_widget(form.publics, { 'attr': {'class': 'btn btn-default center','tabindex':'4'}}) }}
          <strong class="hidden-xs hidden-sm strong">
            et le
          </strong>
          {{ form_widget(form.type, { 'attr': {'class': 'btn btn-default center','tabindex':'5'}}) }}
        </div>
      </div>
    </div>

    <div class="row">
      <hr>
    </div>
    <div class="row">


    <div class="col-md-7 description center">
      <a class="hidden-xs hidden-sm picto-item" href="#" aria-label='Les champs "Titre" et "Description" doivent être rempli.'><span class="glyphicon glyphicon-info-sign"></a><h4 class="center">Description</h4>

      <div class="row">

        <div class="col-md-12">
          {{ form_widget(form.title, { 'attr': {'id': 'title','class':'col-md-12 title', 'placeholder': 'Titre*','tabindex':'6'}}) }}
        </div>

        <div class="col-md-12">
          {{ form_widget(form.description, { 'attr': {'class': 'inline col-md-12', 'placeholder': 'Description*','tabindex':'7'}}) }}
        </div>

        <div class="col-md-12">
          {{ form_errors(form.contact_name, { 'attr': {'class':'list-group-item list-group-item-danger'}}) }}
          {{ form_errors(form.contact_email, { 'attr': {'class':'list-group-item list-group-item-danger'}}) }}
          {{ form_errors(form.dateStart, { 'attr': {'class':'list-group-item list-group-item-danger'}}) }}
          {{ form_errors(form.dateEnd, { 'attr': {'class':'list-group-item list-group-item-danger'}}) }}
          {{ form_errors(form.title, { 'attr': {'class':'list-group-item list-group-item-danger'}}) }}
          {{ form_errors(form.description, { 'attr': {'class':'list-group-item list-group-item-danger'}}) }}
          {{ form_errors(form.place, { 'attr': {'class':'list-group-item list-group-item-danger'}}) }}
          {{ form_errors(form.uploadedLinks, { 'attr': {'class':'list-group-item list-group-item-danger'}}) }}
          {{ form_errors(form.images, { 'attr': {'class':'list-group-item list-group-item-danger'}}) }}
          {{ form_errors(form.uploadedFiles, { 'attr': {'class':'list-group-item list-group-item-danger'}}) }}
        </div>
        <div class="col-md-12 add">
          <div class="col-md-4">
            {{ form_widget(form.uploadedLinks, { 'attr': {'class': 'btn-add-link inline','tabindex':'19'}}) }}
          </div>
          <div class="col-md-4">
            <strong>Brouillon</strong>
            <br>
            {{ form_widget(form.scratch, { 'attr': {'class':'headlines-check','label':'À la une','tabindex':'23'} }) }}
          </div>
          <div class="col-md-4">
            <strong>À la une</strong>
            <br>
            {{ form_widget(form.headlines, { 'attr': {'class':'headlines-check','label':'À la une','tabindex':'23'} }) }}
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-5 detail center">
      <div class="row">
        <div class="col-md-12  detail-top">
          <a class="hidden-xs hidden-sm picto-item" href="#" aria-label='Seuls les champs "Villes" et "Code Postal" sont obligatoires.'><span class="glyphicon glyphicon-info-sign"></a><h4 class="col-md-12 center">Adresse</h4>
          <div class="col-md-12 place center">
            {{ form_widget(form.place.adress1, { 'attr': {'class': 'col-md-12 center title','tabindex':'8'}}) }}
            {{ form_widget(form.place.adress2, { 'attr': {'class': 'col-md-12 center','tabindex':'9'}}) }}
            {{ form_widget(form.place.city, { 'attr': {'class': 'col-md-6 center','tabindex':'10'}}) }}
            {{ form_widget(form.place.cp, { 'attr': {'class': 'col-md-push-1 col-md-5 center','tabindex':'11'}}) }}
            {{ form_widget(form.place.country, { 'attr': {'class': 'col-md-push-3 col-md-6 center','tabindex':'12'}}) }}
          </div>
        </div>
        <div class="col-md-12 center links">
          <hr>
          <h4>Fichiers</h4>
          {{ form_widget(form.images, { 'attr': {'class': 'col-md-12','tabindex':'17'} }) }}
          <strong class="col-md-12">Ajouter des fichiers annexes</strong>
          {{ form_widget(form.uploadedFiles, { 'attr': {'class': 'col-md-12','tabindex':'18'} }) }}
        </div>
      </div>

    </div>

  </div>

  <div class="row">
    <hr>

    <div class="col-md-push-3 col-md-6 center">
      <div class="col-md-6">
        <a class="btn btn-default btn-return" href="{{ path('search') }}">
          Retour à la liste des événements
        </a>
      </div>
      <div class="col-md-6">
        {{ form_row(form.submit,{ 'attr':  { 'class':'btn-submit center','label': 'Publier','tabindex':'22' }}) }}</div>
    </div>
  </div>

  {{ form_end(form) }}
</div>
</div>


{% endblock %}
{% block javascripts %}
{{ parent() }}
<script src="{{ asset('js/addLinks.js')}}" type="text/javascript"></script>
{% endblock %}

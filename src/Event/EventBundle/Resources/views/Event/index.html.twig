{% extends '::base.html.twig' %}
{% block stylesheets %}
  {{ parent() }}
  <link href="{{ asset('web/css/event/index.css') }}" type="text/css" rel="stylesheet"/>
{% endblock %}
{% block body -%}
    <h1>Événements</h1>



    <table class="records_list">
        <thead>
            <tr>
                <!-- <th>Id</th> -->
                <th>Author</th>
                <th>Title</th>
                <th>Description</th>
                <th>Contact_name</th>
                <th>Contact_email</th>
                <th>Place</th>
                <th>Datestart</th>
                <th>Dateend</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <!-- <td><a href="{{ path('event_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td> -->
                <td>{{ entity.author }}</td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.contactname }}</td>
                <td>{{ entity.contactemail }}</td>
                <td>{{ entity.place }}</td>
                <td>{% if entity.dateStart %}{{ entity.dateStart|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.dateEnd %}{{ entity.dateEnd|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('event_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('event_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('event_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}

{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Event</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ entity.author }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Contact_name</th>
                <td>{{ entity.contactname }}</td>
            </tr>
            <tr>
                <th>Contact_email</th>
                <td>{{ entity.contactemail }}</td>
            </tr>
            <tr>
                <th>Place</th>
                <td>{{ entity.place }}</td>
            </tr>
            <tr>
                <th>Datestart</th>
                <td>{{ entity.dateStart|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Dateend</th>
                <td>{{ entity.dateEnd|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('event') }}">
            Retourner à la liste
        </a>
    </li>
    <li>
      {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
      {% if entity.author == app.user.username %}
      <a href="{{ path('event_edit', { 'id': entity.id }) }}">Éditer</a>
      {% elseif is_granted("ROLE_SUPER_ADMIN") %}
      <a href="{{ path('event_edit', { 'id': entity.id }) }}">Éditer</a>
      {% endif %}
      {% endif %}
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
